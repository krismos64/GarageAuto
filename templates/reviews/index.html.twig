{% extends 'base.html.twig' %}

{% block title %}Les avis{% endblock %}

{% block body %}
<style>
    h1 {
        text-align: center;
        color: #233588;
        margin-top: 50px;
        line-height: 1.5;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .col-md-8 {
            width: 100%;
        }
    }
</style>
<h1>Laissez-nous un avis après votre passage</h1>

<!-- Start review form section -->
<section class="review-form-section sec-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto mb-4">
                <div class="card review-form-card">
                    <div class="card-body">
                        <h2>Laissez votre avis</h2>
                        <div class="review-form">
                            {{ form_start(review_form) }}
                            {% if errors|length > 0 %}
                                <div class="alert alert-danger">
                                    <ul>
                                        {% for error in errors %}
                                            <li>{{ error.messageKey|trans(error.messageData, 'validators') }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                            <div class="form-group">
                                {{ form_row(review_form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom', 'required': true}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(review_form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom', 'required': true}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(review_form.content, {'attr': {'class': 'form-control', 'placeholder': 'Votre commentaire', 'required': true, 'rows': 10}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(review_form.rating, {'attr': {'class': 'form-control', 'min': 1, 'max': 5}}) }}
                            </div>
                            <button type="submit" class="submit-btn btn btn-primary">Soumettre</button>
                            {{ form_end(review_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End review form section -->


{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

<style>
    h1 {
        text-align: center;
        color: #233588;
        margin-top: 50px;
        line-height: 1.5;
    }

    .review-card {
        margin-bottom: 20px;
    }

    .review-text {
        margin-bottom: 10px;
    }

    .card-footer {
        font-weight: bold;
    }
</style>
<h1>Les commentaires de nos clients :</h1>

<!-- Start reviews section -->
<section class="reviews-section sec-padding">
    <div class="container">
        <div class="row">
            {% for review in reviews %}
                <div class="col-md-6 mb-4">
                    <div class="card review-card">
                        <div class="card-body">
                            <p class="card-text review-text">{{ review.content }}</p>
                        </div>
                        <div class="card-footer">
                            <strong>{{ review.firstname }} {{ review.lastname }}</strong>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- End reviews section -->

{% endblock %}

